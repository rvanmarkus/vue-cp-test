{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,        
        "suppressImplicitAnyIndexErrors": true,        
        "target": "es5",
        "lib": [
            "dom",
            "es2015"
          ]
    },
    "include": [
        "./src/**/*"
    ]
}